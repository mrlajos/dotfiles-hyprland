
[global]
    ### Geometry / layout
    monitor = 0
    follow = mouse
    width = 300
    height = 200
    origin = top-right
    offset = 10x40
    notification_limit = 5

    ### Appearance
    font = JetBrainsMono 9

    # background of notification window
    background = "#1e1e2e"
    foreground = "#cdd6f4"

    # border and separators
    frame_width = 2
    frame_color = "#89b4fa"
    separator_color = frame
    separator_height = 2

    # padding / rounding
    padding = 8
    horizontal_padding = 10
    text_icon_padding = 6
    corner_radius = 8

    # transparency: 0 = opaque, 100 = fully transparent
    transparency = 0

    # icons
    icon_position = left
    max_icon_size = 36

    ### Behaviour
    sort = yes
    idle_threshold = 120
    history_length = 20

    show_indicators = yes
    sticky_history = yes
    ignore_newline = no
    word_wrap = yes
    markup = full

    # timeouts (seconds)
    timeout = 8
    timeout_low = 5
    timeout_critical = 0

    ### Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = close_all
    mouse_right_click = do_action

